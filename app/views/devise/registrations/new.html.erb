<div class="login_area">
  <div class="info">TIC新規登録</div>
  <div class=messeage>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
  <div class="login_box">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field_box">
        <p class="login_label">氏名コード＋Z100</p>
        <%= f.text_field :code, placeholder: "氏名コード＋Z100" %>
      </div>

      <div class="field_box">
        <p class="login_label">氏名</p>
        <%= f.text_field :name, placeholder: "氏名" %>
      </div>

      <div class="field_box">
        <p class="login_label">メールアドレス</p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>

      <div class="field_box">
        <p class="login_label">パスワード
        <% if @minimum_password_length %>
        (<%= @minimum_password_length %> 文字以上)
        <% end %></p>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード" %>
      </div>

      <div class="field_box">
        <p class="login_label">パスワード確認</p>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",placeholder: "パスワードを再度入力" %>
      </div>

      <div class="actions">
        <%= f.submit "登録" %>
      </div>
    <% end %>
  </div>
  すでにアカウントお持ちですか？<br>
  <%= render "devise/shared/links" %>
</div>
