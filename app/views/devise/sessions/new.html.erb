<div class="login_area">
  <div class="info">TICログイン</div>
  <div class=messeage>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  </div>
  <div class="login_box">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field_box">
        <p class="login_label">メールアドレス</p>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス" %>
      </div>

      <div class="field_box">
        <p class="login_label">パスワード</p>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field_box">
          <%= f.check_box :remember_me %>
          ログイン情報を記憶
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
  </div>
  新規登録、パスワードお忘れの方はこちら<br>
  <%= render "devise/shared/links" %>
</div>